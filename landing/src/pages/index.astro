---
import Layout from '../layouts/Layout.astro';
---

<Layout title="RoyalPrompts - Download AI Prompt App">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-royal-50 via-primary-50 to-white py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Logo -->
      <div class="flex justify-center mb-8">
        <img src="/royal-gold.png" alt="RoyalPrompts" class="w-40 h-40" />
      </div>
      
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
        RoyalPrompts
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Your AI-powered prompt companion. Discover amazing prompts, boost creativity, and enhance your writing.
      </p>
      
      <!-- Download Button -->
      <div class="flex justify-center mb-12">
        <a href="#" class="inline-flex items-center justify-center bg-black text-white px-8 py-4 rounded-xl font-semibold hover:bg-gray-800 transition-all duration-200 shadow-lg hover:shadow-xl">
          <svg class="w-6 h-6 mr-3" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
          </svg>
          Download for Android
        </a>
      </div>
      
      <!-- App Preview -->
      <div class="max-w-sm mx-auto">
        <div class="bg-white rounded-3xl shadow-2xl p-4">
          <img src="/screenshot.JPG" alt="RoyalPrompts App Screenshot" class="w-full h-auto rounded-2xl" />
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Why Choose RoyalPrompt?
        </h2>
        <p class="text-lg text-gray-600">
          Simple, powerful, and privacy-focused
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-royal-500 to-primary-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">AI-Powered</h3>
          <p class="text-gray-600">
            Get intelligent prompt suggestions tailored to your needs
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-royal-500 to-primary-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Privacy First</h3>
          <p class="text-gray-600">
            Anonymous login. No personal data required. Your privacy matters.
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-royal-500 to-primary-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Free Forever</h3>
          <p class="text-gray-600">
            Completely free to use. No subscriptions, no hidden fees.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Download CTA Section -->
  <section class="py-16 bg-gradient-to-r from-royal-600 to-primary-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Ready to Boost Your Creativity?
      </h2>
      <p class="text-xl text-royal-100 mb-8">
        Join thousands of users who are already using RoyalPrompts
      </p>
      
      <div class="flex justify-center">
        <a href="#" class="inline-flex items-center justify-center bg-white text-royal-600 px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl">
          <svg class="w-6 h-6 mr-3" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
          </svg>
          Download for Android
        </a>
      </div>
    </div>
  </section>
</Layout>